{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "lib": ["es2018", "esnext.asynciterable"],
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./",
      "allowJs": true,
      "noImplicitAny": true,
      "sourceMap": true
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "dist"]
  }